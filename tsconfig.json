{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*"]
    },
  },
  "exclude": ["node_modules"],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
